<% if @nurseries.empty? %>
  <p>Nessun vivaio presente a questo nome</p>
<% else %>
  <h2>Lista vivai:</h2>
  <ul>
    <% @nurseries.each do |nursery| %>
      <li>
        <h3><%= link_to nursery.name, nursery_path(nursery) %></h3>

        <p><%= nursery.location %></p>
        <p><%= nursery.description %></p>
      </li>
    <% end %>
  </ul>
<% end %>