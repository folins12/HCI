<h1>Vivai</h1>

<%= form_with url: nurseries_path, method: :get, local: true do |form| %>
  <%= form.label :query, "Search" %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>


<h2>Risultati della ricerca:</h2>
<ul>
  <% @nurseries.each do |nursery| %>
    <li>
      <h3><%= link_to nursery.name, nurseries_path(nursery) %></h3>
      <h3><%= nursery.name %></h3>
      <p><%= nursery.location %></p>
      <p><%= nursery.description %></p>
    </li>
  <% end %>
</ul>
