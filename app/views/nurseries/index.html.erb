<h1>VIVAI</h1>


<%= form_with url: nurseries_path, method: :get, local: true do |form| %>
  <%= text_field_tag :query, params[:query], placeholder: 'Cerca...' %>
  <%= form.submit "Search" %>
<% end %>



<!-- 
