<!DOCTYPE html>
<html>
<head>
  <title>PlantTracker</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <% unless @hide_navbar %>
    <nav class="navbar-custom">
      <a class="navbar-brand" href="<%= root_path %>">
        <img src="<%= asset_path 'logo.jpeg' %>" alt="Logo">
      </a>
      <div class="navbar-nav nav-buttons"> 
        <div class="nav-item">
          <%= link_to 'Home', root_path, class: 'nav-link' %>
        </div>
        <div class="nav-item">
          <%= link_to 'Piante', infoplants_path, class: 'nav-link' %>
        </div>
        <div class="nav-item">
          <%= link_to 'Vivai', nurseries_path, class: 'nav-link' %>
        </div>
        <% if user_signed_in? %>
          <div class="nav-item">
            <% if current_user.nursery? %>
              <%= link_to nursery_profile_path, class: 'nav-link' do %>
                <i class="fas fa-store-alt nav-icon"></i>
              <% end %>
            <% else %>
              <%= link_to user_profile_path, class: 'nav-link' do %>
                <i class="fas fa-user nav-icon"></i>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="nav-item">
            <%= link_to 'Login', new_user_session_path, class: 'nav-link' %>
          </div>
        <% end %>
      </div>
    </nav>
  <% end %>
  <div class="container mt-4 content">
    <%= yield %>
  </div>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'reservations', 'data-turbolinks-track': 'reload' %>
</body>
</html>
