<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <div class="login-background">
    <div class="login-formcontainer">
      <div class="login-logo">
        <%= link_to root_path do %>
          <img src="<%= asset_path 'logo.jpeg' %>" alt="Logo">
        <% end %>
      </div>
      <%= form_with url: user_session_path, local: true, scope: :user do |form| %>
        <div class="login-input-group <%= 'has-error' if flash[:alert].present? && flash[:alert].include?("email") %>">
          <%= form.email_field :email, placeholder: 'Email', required: true, value: params.dig(:user, :email) %>
          <% if flash[:alert].present? && flash[:alert].include?("email") %>
            <div class="login-error-message">
              <%= flash[:alert] %>
            </div>
          <% end %>
        </div>
        <div class="login-input-group <%= 'has-error' if flash[:alert].present? && flash[:alert].include?("Password") %>">
          <%= form.password_field :password, placeholder: 'Password', required: true %>
          <% if flash[:alert].present? && flash[:alert].include?("Password") %>
            <div class="login-error-message">
              <%= flash[:alert] %>
            </div>
          <% end %>
        </div>
        <div class="login-button-container">
          <button type="submit" class="login-button">Login</button>
        </div>
        <div>
          <%= link_to 'Clicca qui per registrarti', new_user_registration_path, class: 'login-link' %>
        </div>
        <div>
          <%= link_to 'Hai dimenticato la password?', new_password_reset_path, class: 'login-link' %>
        </div>
      <% end %>
    </div>
  </div>
</body>
</html>
