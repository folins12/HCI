<!DOCTYPE html>
<html>
<head>
  <title>Register</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <div class="register-background">
    <div class="register-formcontainer">
      <div class="register-logo">
        <%= link_to root_path do %>
          <img src="<%= asset_path 'logo.jpeg' %>" alt="Logo">
        <% end %>
      </div>
        <%= form_with model: @user, url: register_path, local: true do |form| %>
          <div class="register-input-group">
            <%= form.text_field :nome, value: @user.nome, placeholder: 'Nome', required: true %>
          </div>
          <div class="register-input-group">
            <%= form.text_field :cognome, value: @user.cognome, placeholder: 'Cognome', required: true %>
          </div>
          <div class="register-input-group">
            <%= form.email_field :email, value: @user.email, placeholder: 'Email', required: true %>
          </div>
          <div class="register-input-group">
            <%= form.password_field :password, placeholder: 'Password', required: true %>
          </div>
          <div class="register-input-group">
            <%= form.password_field :password_confirmation, placeholder: 'Conferma Password', required: true %>
          </div>
          <div class="register-input-group">
            <%= form.text_field :address, value: @user.address, placeholder: 'Via/Viale Roma 1, Ciampino', required: true %>
          </div>
          <div class="register-checkbox-container">
            <%= form.check_box :nursery, {}, 'true', 'false' %>
            <%= form.label :nursery, "Vivaio" %>
          </div>
          <div class="register-button-container">
            <button type="submit" class="register-button">Registrati</button>
          </div>
        <% end %>
      <div>
        <a href="/login" class="register-link">Clicca qui per effettuare il login</a>
      </div>
      <% if @user.errors.any? %>
        <div class="error-messages">
          <ul>
            <script type="text/javascript">
              alert("Si sono verificati i seguenti errori:\n<%= @user.errors.full_messages.join('\n') %>");
            </script>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</body>
</html>
