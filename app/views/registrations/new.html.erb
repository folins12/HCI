<!DOCTYPE html>
<html>
<head>
  <title>Register</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <div class="container">
    <div class="logo">
      <img src="<%= asset_path 'logo.jpeg' %>" alt="Logo">
    </div>
    <%= form_with model: @user, url: register_path, local: true do |form| %>
      <div class="input-group">
        <%= form.text_field :nome, placeholder: 'Nome', required: true %>
      </div>
      <div class="input-group">
        <%= form.text_field :cognome, placeholder: 'Cognome', required: true %>
      </div>
      <div class="input-group">
        <%= form.email_field :email, placeholder: 'Email', required: true %>
      </div>
      <div class="input-group">
        <%= form.password_field :password, placeholder: 'Password', required: true %>
      </div>
      <div class="input-group">
        <%= form.password_field :password_confirmation, placeholder: 'Conferma Password', required: true %>
      </div>
      <button type="submit" class="button">Register</button>
      <div>
        <a href="/login" class="link">Clicca qui per effettuare il login</a>
      </div>
    <% end %>
  </div>
</body>
</html>

