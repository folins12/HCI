<!DOCTYPE html>
<html>
<head>
  <title>Register</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <div class="background">
    <div class="formcontainer">
      <div class="logo">
        <%= link_to root_path do %>
          <img src="<%= asset_path 'logo.jpeg' %>" alt="Logo">
        <% end %>
      </div>
      <%= form_with model: @user, url: register_path, local: true do |form| %>
        <div class="input-group">
          <%= form.text_field :nome, value: @user.nome, placeholder: 'Nome', required: true %>
        </div>
        <div class="input-group">
          <%= form.text_field :cognome, value: @user.cognome, placeholder: 'Cognome', required: true %>
        </div>
        <div class="input-group <%= 'has-error' if @user.errors[:email].any? %>">
          <%= form.email_field :email, value: @user.email, placeholder: 'Email', required: true %>
          <% if @user.errors[:email].any? %>
            <span class="error-message"><%= @user.errors[:email].first %></span>
          <% end %>
        </div>
        <div class="input-group <%= 'has-error' if @user.errors[:password].any? %>">
          <%= form.password_field :password, placeholder: 'Password', required: true %>
          <% if @user.errors[:password].any? %>
            <span class="error-message"><%= @user.errors[:password].first %></span>
          <% end %>
        </div>
        <div class="input-group <%= 'has-error' if @user.errors[:password_confirmation].any? %>">
          <%= form.password_field :password_confirmation, placeholder: 'Conferma Password', required: true %>
          <% if @user.errors[:password_confirmation].any? %>
            <span class="error-message"><%= @user.errors[:password_confirmation].first %></span>
          <% end %>
        </div>
        <div class="checkbox-container">
          <%= form.check_box :nursery, {}, 'true', 'false' %>
          <%= form.label :nursery, "Vivaio" %>
        </div>
        <div class="button-container">
          <button type="submit" class="button">Register</button>
        </div>
        <div>
          <a href="/login" class="link">Clicca qui per effettuare il login</a>
        </div>
      <% end %>
    </div>
  </div>
</body>
</html>
